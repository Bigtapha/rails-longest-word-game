<h1>New Game</h1>
<%# <p>Find me in app/views/games/new.html.erb</p> %>
<h2>
  <ul class="list-letters">

  <% @letters.each do |letter| %>
    <li>
    <%= letter.upcase %>
    </li>
  <% end %>
</ul>
</h2>

<% @start_time = Time.now %>

<form action="/score" method="Post">
  <label for="word" > What is the longest word you can find ? </label>
  <input type="text" name="word"> 
  <input type="submit" value="Play">
  <% @end_time = Time.now %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :start_time, @start_time %>
  <%= hidden_field_tag :end_time, @end_time %>
</form>